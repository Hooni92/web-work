package test.servlet;

import java.io.IOException;
import java.io.PrintWriter;
import java.util.Random;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
@WebServlet("/todayfortune")
public class Servlet extends HttpServlet{
	@Override
	protected void service(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		System.out.println("운세를 읽어옵니다.");
		String[] ranfortune= {"오늘은 여자친구가 생기지 않을꺼에요", "내일도 여자친구가 생기지 않을꺼에요"};
		String b = ranfortune[new Random().nextInt(0,2)];
		System.out.println(b);
		//msg 라는 파라미터명으로 전송되는 문자열 읽어오기
		req.setCharacterEncoding("utf-8");
		String a=req.getParameter("name");
		resp.setCharacterEncoding("utf-8");
		resp.setContentType("text/html; charset=utf-8");
		//요청을 한 클리언트에게 문자열을 응답할 객체얻어오기
		PrintWriter pw=resp.getWriter();
		pw.println(a+"님 오늘의 운세입니다. ");
		pw.println("<!doctype html>");
		pw.println("<html>");
		pw.println("<head>");
		pw.println("<meta charset='utf-8'>");
		pw.println("<title>오늘의 운세</title>");
		pw.println("<a href='/Step01_Servlet'>인덱스로 가기</a>");
		pw.println("</body>");
		pw.println("</html>");
		pw.flush();//방출
		pw.close();//닫아주기
	}
}
